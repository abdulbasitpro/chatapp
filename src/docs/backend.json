
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the chat application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL to the user's avatar image.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "email",
        "name"
      ]
    },
    "Room": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Room",
      "type": "object",
      "description": "Represents a chat room.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the room entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the chat room."
        },
        "creatorId": {
          "type": "string",
          "description": "Reference to the User who created the room."
        }
      },
      "required": [
        "name",
        "creatorId"
      ]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a message sent in a chat room.",
      "properties": {
        "content": {
          "type": "string",
          "description": "The content of the message."
        },
        "timestamp": {
          "type": "object",
          "description": "The server timestamp of when the message was sent."
        },
        "senderId": {
          "type": "string",
          "description": "Reference to the User who sent the message."
        },
        "userName": {
          "type": "string",
          "description": "The name of the user who sent the message."
        },
        "userAvatar": {
          "type": "string",
          "description": "URL to the avatar of the user who sent the message."
        },
        "fileUrl": {
          "type": "string"
        },
        "fileName": {
          "type": "string"
        },
        "fileType": {
          "type": "string"
        }
      },
      "required": [
        "timestamp",
        "senderId",
        "userName",
        "userAvatar"
      ]
    },
    "TypingStatus": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TypingStatus",
      "type": "object",
      "description": "Represents a user's typing status in a room.",
      "properties": {
        "userName": {
          "type": "string",
          "description": "The name of the user who is typing."
        },
        "timestamp": {
          "type": "object",
          "description": "Server timestamp of the last typing activity."
        }
      },
      "required": [
        "userName",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/Room"
      },
      "description": "Stores chat room information."
    },
    "/rooms/{roomId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/Message"
      },
      "description": "Stores messages for a specific chat room."
    },
    "/rooms/{roomId}/typing_statuses/{userId}": {
      "schema": {
        "$ref": "#/entities/TypingStatus"
      },
      "description": "Stores the typing status of users in a room. Document ID is the user's UID."
    }
  }
}
